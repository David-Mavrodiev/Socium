@model SociumApp.Areas.Admin.Models.IndexAdminViewModel

@{ 
    Layout = "../Shared/_AdminPartial.cshtml";
}

<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Администратор</a>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/profile/user"><i class="fa fa-fw fa-user"></i> Профил</a>
                    </li>
                    <li>
                        <a href="/"><i class="fa fa-fw fa-gear"></i> Начало</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li class="active">
                    <a href="index"><i class="fa fa-fw fa-info-circle"></i> Начало</a>
                </li>
                <li>
                    <a href="/admin/administrator/usersstatistic"><i class="fa fa-fw fa-user"></i> Потребители</a>
                </li>
                <li>
                    <a href="/admin/administrator/questionsstatistic"><i class="fa fa-fw fa-question"></i> Въпроси</a>
                </li>
                <li>
                    <a href="/admin/administrator/optionsstatistic"><i class="fa fa-fw fa-comments"></i> Отговори</a>
                </li>
                <li>
                    <a href="/admin/administrator/votesstatistic"><i class="fa fa-thumbs-up"></i> Гласувания</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Начало <small>Обща статистика</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-info-circle"></i> Начало
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-question fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@Model.QuestionsCount</div>
                                    <div>Всички въпроси</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/administrator/questionsstatistic">
                            <div class="panel-footer">
                                <span style="color:cornflowerblue" class="pull-left">Покажи повече</span>
                                <span class="pull-right"><i style="color:cornflowerblue" class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comments fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@Model.OptionsCount</div>
                                    <div>Всички отговори</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/administrator/optionsstatistic">
                            <div class="panel-footer">
                                <span class="pull-left">Покажи повече</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-user fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@Model.UsersCount</div>
                                    <div>Всички потребители</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/administrator/usersstatistic">
                            <div class="panel-footer">
                                <span class="pull-left">Покажи повече</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-thumbs-up fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@Model.VotesCount</div>
                                    <div>Всички гласувания</div>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/administrator/votesstatistic">
                            <div class="panel-footer">
                                <span class="pull-left">Покажи повече</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Обратна връзка</h3>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-info alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <i class="fa fa-info-circle"></i>  <strong>Like SB Admin?</strong> Try out <a href="http://startbootstrap.com/template-overviews/sb-admin-2" class="alert-link">SB Admin 2</a> for additional features!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>